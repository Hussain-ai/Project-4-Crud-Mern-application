<% include partials/header %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Form</title>
</head>
<body>
    <div class="ui main text container segment">
        <div class="ui huge header"> Edit <%= bookblog.title%></div>
          <form action="/bookblogs/<%=bookblog._id%>?_method=PUT" method="POST" class="ui form">
            <div class="field">
                <label> Title: </label>
                <input type="text" name="bookblog[title]" placeholder="title" value='<%=bookblog.title%>'
            </div>

            <div class="field">
                    <label> Image: </label>
                    <input type="text" name="bookblog[image]" placeholder="image" value='<%=bookblog.image%>'>
             </div>
             <div class="field">
                <label> Author: </label>
                <textarea name="bookblog[author]"><%=bookblog.author%>'</textarea>
         </div
             <div class="field">
                    <label> Description: </label>
                    <textarea name="bookblog[body]"><%=bookblog.body%>'</textarea>
             </div>
             <input type="submit" class="ui violet basic button">
          </form>
    </div>
</body>
</html>
